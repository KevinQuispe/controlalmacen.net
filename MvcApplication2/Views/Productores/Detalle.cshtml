@model  IEnumerable<almacen.Models.detalleGuiaModel>
@{
    ViewBag.Title = "Detalle de Guia";
}

@Scripts.Render("~/Content/js/formulario.js")
@Scripts.Render("~/bundles/modernizr")

<header class="page-header">
    <center><h3>Detalle de Guia</h3></center>
</header>
<div class="container fluid">

    <div class="col-md-12 formulario">

        <table class="table table-bordered table-condensed">
            <legend>Datos del detalle de guia <div class=" pull-right"><a href="~/Productores/detalleGuia" class="btn btn-success"><span class="fa fa-arrow-left"></span>volver</a></div>
</legend>
            <thead class="text-center">
                <tr class="btn-success">
                    <td><strong>Codigo</strong></td>
                    <td><strong>Nombre de Insumo</strong></td>
                    <td><strong>Unidad</strong></td>
                    <td><strong>Numero de Guia</strong></td>         
                    <td><strong>Cantidad</strong></td>
                    <td><strong>Mantenimiento</strong></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.codInsumo</td>
                        <td>@obj.nomInsumo</td>
                        <td>@obj.unidad</td>
                        <td>@obj.numGuia</td>
                        <td>@obj.cant</td>

                        <td class="text-center">
                            <span class="fa fa-pencil btn btn-success btn btn-sm">
                                @Html.ActionLink("Editar", "EditDetalleGuia", new { id = obj.codInsumo.Trim() + "a" + obj.numGuia.Trim() })
                            </span>

                            <span class="fa fa-trash btn btn-danger btn btn-sm">
                                @Html.ActionLink("Eliminar", "DeleteDetalle", new { id = obj.codInsumo.Trim() + "b" + obj.numGuia.Trim(), @text = "c" })
                            </span>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

           </div>
</div>