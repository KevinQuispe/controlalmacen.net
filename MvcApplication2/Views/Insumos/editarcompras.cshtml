@model almacen.Models.Compras
@{
    ViewBag.Title = "editarcompras";
    Layout = "~/Views/Shared/_principal.cshtml";
}
@if (Model != null && Session["Username"] != null && Session["bloquear"] != null && Session["codigoalmacen"] != null)
{
    <header class="page-header">
        <center><h3>EDITAR COMPRA</h3></center>
    </header>
    <div class="container formulario">

        @using (Html.BeginForm(FormMethod.Post))
        {
            <fieldset>
                <legend>Compra a editar</legend>

                <div class="form-group col-md-12">
                    <label class="control-label col-sm-4">Número</label>
                    <div class="col-sm-5 col-md-5">@Html.TextBoxFor(model => model.numero, new { @class = "form-control", @placeholder = "cantidad", @type = "text" })@Html.ValidationMessageFor(model => model.numero)</div>
                </div>

                <div class="form-group col-md-12">
                    <label class="control-label col-sm-4">Razón Social</label>
                    <div class="col-sm-5 col-md-5">@Html.TextBoxFor(model => model.razonsocial, new { @class = "form-control", @disabled = "true" })@Html.ValidationMessageFor(model => model.razonsocial)@Html.HiddenFor(model => model.razonsocial)</div>
                </div>

                <div class="form-group col-md-12">
                    <label class="control-label col-sm-4">Fecha Emisión</label>
                    <div class="col-sm-5 col-md-5">@Html.TextBoxFor(model => model.fechaemision, new { @class = "form-control", @placeholder = "dd/mm/yyyy", @id = "fechaI" })@Html.ValidationMessageFor(model => model.fechaemision)</div>
                </div>

                <div class="form-group col-md-12">
                    <label class="control-label col-sm-4">Fecha Vencimiento</label>
                    <div class="col-sm-5 col-md-5">@Html.TextBoxFor(model => model.fechavencimiento, new { @class = "form-control", @placeholder = "dd/mm/yyyy", @id = "fechaF" })@Html.ValidationMessageFor(model => model.fechavencimiento)</div>
                </div>

                <div class="form-group col-md-12">
                    <label class="control-label col-sm-4">Valor Venta</label>
                    <div class="col-sm-5 col-md-5">@Html.TextBoxFor(model => model.valorventa, new { @class = "form-control", @placeholder = "total", @type = "number", @step = "0.000001", @min = "0" })@Html.ValidationMessageFor(model => model.valorventa)</div>
                </div>

                <div class="form-group col-md-12">
                    <label class="control-label col-sm-4">Impuesto</label>
                    <div class="col-sm-5 col-md-5">@Html.TextBoxFor(model => model.impuesto, new { @class = "form-control", @placeholder = "impuesto", @type = "number", @step = "0.000001", @min = "0" })@Html.ValidationMessageFor(model => model.impuesto)</div>
                </div>

                <div class="form-group col-md-12">
                    <label class="control-label col-sm-4">Observación</label>
                    <div class="col-sm-5 col-md-5">@Html.TextBoxFor(model => model.observacion, new { @class = "form-control", @placeholder = "observación", @type = "text" })@Html.ValidationMessageFor(model => model.observacion)</div>
                </div>

                <div class="col-md-12">
                    <div class="pull-right">
                        <button id="btnEditarCompra" type="submit" value="Save" class="btn btn-success" onclick="this.form.submit(); this.disabled=true;">Guardar</button>
                        <a href="~/Insumos/compras" class="btn btn-success"><li class="fa fa-arrow-left"></li> volver</a>
                    </div>
                </div>
                @Html.ValidationMessage("msgEditCompra", "", new { @class = "text-info" })
            </fieldset>
        }
    </div>
    <script type="text/javascript">
        @Html.Raw(Model.comandojavascript)
        jQuery(function ($) {
            $("#numero").mask("9999-999999");
            $("#fechaI").mask("99/99/9999");
            $("#fechaF").mask("99/99/9999");
        });
    </script>
}
else
{
    <script type="text/javascript">
        window.open("../Home/Login", "_self");
    </script>
}


