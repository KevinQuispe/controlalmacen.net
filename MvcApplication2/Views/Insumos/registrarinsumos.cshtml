@model  almacen.Models.InsumoModel
@{
    ViewBag.Title = "Registar Insumos";
}
@if (Model != null && Session["Username"] != null && Session["bloquear"] != null && Session["codigoalmacen"] != null)
{
    using (Html.BeginForm())
    {
        <header class="page-header"><center><h3>Registro de Insumos</h3></center></header>
        <div class="container">
            <div class="col-md-12 formulario">
                <!-- form insumo-->
                <fieldset>
                    <form class="form-horizontal">
                        <legend>Datos de Insumo</legend>
                        <div class="col-md-6">
                            <label>Codigo de insumo</label>
                            @Html.TextBoxFor(model => model.codInsumo, new { @class = "form-control", @maxlength = "7", @placeholder = " Ingrese Codigo de insumo", @required = "required" })
                            @Html.ValidationMessageFor(model => model.codInsumo, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6">
                            <label>Nombre Insumo</label>
                            @Html.TextBoxFor(model => model.nombreInsumo, new { @class = "form-control", @placeholder = "Ingrese nombre de Insumo", @required = "required" })
                            @Html.ValidationMessageFor(model => model.nombreInsumo, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            <label>Unidad</label>
                            @Html.DropDownList("listunidad", Model.listadrodunidad, "Seleccione unidad", new { @class = "form-control" })

                        </div>
                        <div class="col-md-6">
                            <label>Familia</label>
                            @Html.DropDownList("listafamilia", Model.listadropfamilia, "Seleccione familia", new { @class = "form-control" })
                        </div>
                        <div class="col-md-12">
                            <div class="form-group"></div>
                        </div>
                        <div class="col-md-12">
                            <div>
                                <div class="col-md-4">
                                    @Html.Raw(Model.msjInsumoModel)
                                </div>
                            </div>
                            <div class="pull-right">
                                <button type="submit" value="Registrar" class="btn btn-success" onclick="this.form.submit(); this.disabled=true;">Registrar</button>
                                <input type="reset" value="Nuevo" class="btn btn-success" />
                                @Html.ActionLink("Volver", "retornaInfoAlmacen", new { id = Session["codigoalmacen"].ToString() }, new { @class = "btn btn-success" })
                            </div>
                        </div>
                    </form><!-- close form insumo-->
                </fieldset>
            </div>
        </div>
    }
}
else
{
    <script type="text/javascript">
        window.open("../Home/Login", "_self");
    </script>
}
