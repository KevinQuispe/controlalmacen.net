@model almacen.Models.UsuarioLogin
@{  
    ViewBag.Title = "Login";
    Layout = null;
   
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Images/iconlogin.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css/bootstrap.css")
    @Styles.Render("~/Content/css/style.css")
    @Scripts.Render("~/bundles/modernizr")
   
    <link rel="stylesheet" href="~/Content/css/font-awesome.css">
    <link href="~/Content/css/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>
   
    <div class="col-sm-4"></div>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    
    {

        <div id="cl-wrapper" class="login-container col-sm-4 ">
            <div class="middle-login">
                <div class="block-flat">
                    <div class="header">
                        <h3 class="text-center">
                            Login
                        </h3>
                    </div>
                    <div>
                        <form style="margin-bottom: 0px !important;" class="form-horizontal" action="/Home/Login" id="login" method="post">
                            
                            <div class="content">
                              
                                <div class="form-group">
                                    <div class="col-md-2 col-md-push-1">
                                        <i class="fa fa-user fa-2x"></i>
                                    </div>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(dl => dl.log, new { @class = "form-control", @placeholder = "Ingrese Login" })

                                    </div>

                                </div>
                                <div class="col-md-12">
                                    <div class="form-group"></div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2 col-md-push-1">
                                        <i class="fa fa-lock fa-2x"></i>
                                    </div>
                                    <div class="col-md-10">
                                        @Html.PasswordFor(dl => dl.pass, new { @class = "form-control", @placeholder = "Ingrese Password" })

                                    </div>
                                </div>
                                <div class="col-md-12">
                                    
                                    <div class="form-group">
                                       
                                        <button type="submit" class="btn btn-succsess btn-md btn-block"  data-dismiss="modal" id="btnLogin"><span class="fa fa-sign-in fa-1x tab-left"></span> Ingresar</button>

                                    </div>
                                </div>
                                <div class="col-lm-12">
                                    <div class="form-group"></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-center out-links">
                    <p>&copy; @DateTime.Now.Year</p>
                </div>
            </div>
        </div>
    }
  
  
  
</body>
</html>
